<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Dialog.Alert</item>
        <!--<item name="android:dialogTheme">@style/TimePickerDialogTheme</item> &lt;!&ndash; TimePicker dialog &ndash;&gt;-->
        <!--<item name="dialogTheme">@style/TimePickerDialogTheme</item> &lt;!&ndash; TimePicker dialog &ndash;&gt;-->
        <!--<item name="android:alertDialogTheme">@style/TimePickerDialogTheme</item> &lt;!&ndash; Alert dialog &ndash;&gt;-->
        <!--<item name="alertDialogTheme">@style/TimePickerDialogTheme</item>-->
        <!--<item name="timePickerDialogTheme">@style/TimePickerDialogTheme</item>-->
        <item name="android:windowBackground">@color/appBackgroundColor</item>
        <!-- The animated arrow style -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <!-- color for widget theming, eg EditText. Doesn't effect ActionBar. -->
        <item name="colorControlNormal">@color/drawerArrowColor</item>
        <item name="colorControlActivated">@color/drawerArrowColor</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorControlHighlight">#30ffffff</item>
        <item name="android:textColor">@color/appTextColorPrimary</item>

        <!--popupMenu for block items and spinner-->
        <item name="textAppearanceLargePopupMenu">@style/AppPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/AppPopupMenuTextAppearanceLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/AppyPopupMenuTextAppearanceSmall</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/AppyPopupMenuTextAppearanceSmall</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme">
    </style>

    <style name="AppTheme.Default">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="AppTheme.TransparentBackground" parent="AppTheme.Default">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppyPopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/popupTextColor</item>
    </style>

    <style name="AppPopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/popupTextColor</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background_drawable</item>
        <item name="android:popupElevation" tools:targetApi="lollipop">2dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/drawerArrowColor</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/drawerArrowColor</item>
    </style>

    <style name="ToolbarStyle" parent="ActionBarTheme">
        <!-- Title text -->
        <item name="android:textColorPrimary">@color/drawerArrowColor</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@color/drawerArrowColor</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@color/drawerArrowColor</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@color/drawerArrowColor</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- background of the  -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>

    <style name="AdyenCheckout.TextInputLayout" >
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="hintTextAppearance">@style/AdyenCheckout.HintTextStyle</item>
        <item name="android:minHeight">@dimen/input_layout_height</item>
        <item name="android:textColor">@color/appTextColorPrimary</item>
        <item name="editTextColor">@color/appTextColorPrimary</item>
        <item name="android:editTextColor">@color/appTextColorPrimary</item>
        <item name="android:textColorHint">@color/appTextColorPrimary</item>
        <item name="android:textColorHighlight">@color/appTextColorPrimary</item>
    </style>

    <style name="CardItemViewStyle">
        <item name="android:textAppearance">@style/CardItemViewTextAppearanceStyle</item>
    </style>

    <style name="CardItemViewTextAppearanceStyle">
        <item name="android:textColor">@color/appTextColorPrimary</item>
    </style>

</resources>
